<Window x:Class="SnakeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakeWPF"
        mc:Ignorable="d"
        Title="" Height="350" Width="200" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid Background="DarkRed">
        <StackPanel>
            <Image Source="Resources\Greedyworm.png" Margin="5"></Image>
            <Button x:Name="btnPlay" Content="Play" Width="172" Margin="5" Click="btnPlay_Click"></Button>
            <Button x:Name="btnExit" Content="Exit" Width="172" Margin="5" Click="btnExit_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
