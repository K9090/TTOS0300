<Window x:Class="Lab10T1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10T1"
        mc:Ignorable="d"
        Title="Checkbox control" Height="350" Width="300">
    <Grid>
        <StackPanel x:Name="stackPanel">
            <CheckBox x:Name="chkMilk" Content="Milk" Margin="10" HorizontalAlignment="Left"/>
            <CheckBox x:Name="chkButter" Content="Butter" Margin="10" HorizontalAlignment="Left"/>
            <CheckBox x:Name="chkBeer" Content="Beer" Margin="10" HorizontalAlignment="Left"/>
            <CheckBox x:Name="chkChicken" Content="Chicken" Margin="10" HorizontalAlignment="Left"/>
            <CheckBox x:Name="chkLemonade" Content="Lemonade" Margin="10" HorizontalAlignment="Left"/>
            <Button x:Name="btnBuy" Content="Buy" Margin="10" Width="50" HorizontalAlignment="Left" Click="btnBuy_Click"/>
            <TextBlock x:Name="txbList" TextWrapping="Wrap" Text="Shopping list:" Margin="10" HorizontalAlignment="Left"/>
            <TextBox x:Name="txtList" Height="40" TextWrapping="Wrap" Margin="10" Text=""/>
        </StackPanel>
    </Grid>
</Window>
