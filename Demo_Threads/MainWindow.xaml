<Window x:Class="Demo_Threads.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo_Threads"
        mc:Ignorable="d"
        Title="Simple Thread Demo" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <Button x:Name="btnWork" Content="Do long work" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="100" Click="btnWork_Click"/>
            <Button x:Name="btnFire" Content="Fire!" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Width="100" Click="btnFire_Click"/>
            <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="23" Margin="10" TextWrapping="Wrap" Text="[message comes here]" VerticalAlignment="Top" Width="auto"/>

        </StackPanel>
        
    </Grid>
</Window>
