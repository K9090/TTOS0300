<Window x:Class="Lab10T3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab10T3"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Button x:Name="btnDraw" Content="Draw" HorizontalAlignment="Left" Margin="90,100,0,0" VerticalAlignment="Top" Width="75" Click="btnDraw_Click"/>
        <Button x:Name="btnClear" Content="Clear" HorizontalAlignment="Left" Margin="210,100,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="txbGame" HorizontalAlignment="Left" Margin="30,20,0,0" TextWrapping="Wrap" Text="Choose game:" VerticalAlignment="Top"/>
        <TextBlock x:Name="txbNumOfDraws" HorizontalAlignment="Left" Margin="30,60,0,0" TextWrapping="Wrap" Text="Number of draws:" VerticalAlignment="Top"/>
        <ComboBox x:Name="cmbGameType" HorizontalAlignment="Left" Margin="210,20,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtDraws" HorizontalAlignment="Left" Height="23" Margin="210,60,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120" TextAlignment="Right"/>

    </Grid>
</Window>
